        <Label Content="Apellido: " FontSize="15" HorizontalAlignment="Left" Margin="28,245,0,0" VerticalAlignment="Top" FontFamily="Sekunda"/>
        <Label Content="Telefono: " FontSize="15" HorizontalAlignment="Left" Margin="28,294,0,0" VerticalAlignment="Top" FontFamily="Sekunda"/>
