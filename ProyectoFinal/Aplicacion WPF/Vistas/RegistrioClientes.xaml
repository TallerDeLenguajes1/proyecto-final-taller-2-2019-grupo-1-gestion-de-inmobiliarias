        <TextBox x:Name="txtbx_UsuarioCliente"  HorizontalAlignment="Left" Height="24" Margin="187,111,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="170" BorderBrush="Black"/>
        <TextBox x:Name="txtbx_ContraseniaCliente" HorizontalAlignment="Left" Height="24" Margin="187,156,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="170" BorderBrush="Black"/>
        <Label Content="Usuario/Email: " FontSize="15" HorizontalAlignment="Left" Margin="26,107,0,0" VerticalAlignment="Top" FontFamily="Sekunda"/>
        <Label Content="Contraseña: " FontSize="15" HorizontalAlignment="Left" Margin="26,153,0,0" VerticalAlignment="Top" FontFamily="Sekunda"/>

